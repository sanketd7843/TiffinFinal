<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbarSearch"
    android:background="@color/black_spotify"
    android:titleTextColor="@color/white_spotify"
    android:titleMarginStart="25dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/applicationLogo"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginRight="65dp"
            android:text="Tiffin App"
            android:textSize="19dp"
            android:textColor="@color/white_spotify"
            android:textStyle="bold"
            android:fontFamily="@font/google_sans_medium"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:gravity="center_horizontal" />
        <TextView
            android:visibility="gone"
            android:id="@+id/applicationLogo2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:text="Made Easy"
            android:textColor="@color/white_spotify"
            android:textSize="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/google_sans_medium"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/showlogoutButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@drawable/ic_logout"
        android:tint="@color/white_spotify"
        android:layout_marginRight="10dp"/>


</androidx.appcompat.widget.Toolbar>